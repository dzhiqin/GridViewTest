<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <TextView
        android:id="@+id/get_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textSize="20sp"/>
    <Button 
        android:id="@+id/simpleadapter_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simpleadapter_str"/>

    <Button 
        android:id="@+id/baseadapter_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/baseadapter_str"/>
    
    <Button 
        android:id="@+id/arrayadapter_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/arrayadapter_str"/>
</LinearLayout>
